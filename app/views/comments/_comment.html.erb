<li class="media comment" data-id="<%= comment.id %>">
  
<%= link_to gravatar_for(comment.user, class: "media-object"), comment.user, class: 'pull-left' %>

  <div class="media-body">
    <h4 class="media-heading">
    <%= link_to comment.user.name, comment.user %> says
      <small class="text-muted">[at <%= comment.created_at.strftime('%-d %B %Y, %H:%M:%S') %>]</small></h4>
    <p><%= comment.body %></p>
  </div>
</li>